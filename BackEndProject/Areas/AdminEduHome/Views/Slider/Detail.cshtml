@model Slider
@{
    ViewData["Title"] = "Detail";
}

<div>
    <h4>Slider Image</h4>
    <img src="~/img/slider/@Model.ImagePath" width="450" alt="Alternate Text" />
</div>
<div style="margin-top:30px">
    <h4>Slider Title</h4>
    <p>@Model.Title</p>
</div>
<div style="margin-top:30px">
    <h4>Slider Description</h4>
    <p>@Html.Raw(Model.Description)</p>
</div>
<div class="row" style="margin-top:20px">
    <a asp-action="Index" class="btn btn-dark">Go Back</a>
</div>

