@model Course
@{
    ViewData["Title"] = "Detail";
}

<div>
    <h4>Course Image</h4>
    <img src="~/img/course/@Model.ImagePath" width="450" alt="Alternate Text" />
</div>
<div style="margin-top:30px">
    <h4>Course name</h4>
    <p>@Model.Name</p>
</div>
<div style="margin-top:30px">
    <h4>Course description</h4>
    <p>@Html.Raw(Model.Description)</p>
</div>
<div style="margin-top:30px">
    <h4>About course</h4>
    <p>@Html.Raw(Model.CourseContent.AboutCourse)</p>
</div>
<div style="margin-top:30px">
    <h4>How to Apply</h4>
    <p>@Html.Raw(Model.CourseContent.HTA)</p>
</div>
<div style="margin-top:30px">
    <h4>Certification</h4>
    <p>@Html.Raw(Model.CourseContent.Certification)</p>
</div>
<div style="margin-top:30px">
    <ul style="list-style-type:none">
        <li style="margin-top:10px">
            <strong>Starts</strong>: @Model.CourseFeature.Starts
        </li>
        <li style="margin-top:10px">
            <strong>Duration:</strong> @Model.CourseFeature.Duration
        </li>
        <li style="margin-top:10px">
            <strong>Class duration:</strong> @Model.CourseFeature.ClassDuration
        </li>
        <li style="margin-top:10px">
            <strong>Skill level:</strong> @Model.CourseFeature.SkillLevel
        </li>
        <li style="margin-top:10px">
            <strong>Language:</strong> @Model.CourseFeature.Langugage
        </li>
        <li style="margin-top:10px">
            <strong>Students:</strong> @Model.CourseFeature.Students
        </li>
        <li style="margin-top:10px">
            <strong>Assesments:</strong> @Model.CourseFeature.Assesments
        </li>
        <li style="margin-top:10px">
            <strong>Fee:</strong> @Model.CourseFeature.Fee
        </li>
    </ul>
</div>
<div class="row" style="margin-top:20px">
    <a asp-action="Index" class="btn btn-dark">Go Back</a>
</div>

