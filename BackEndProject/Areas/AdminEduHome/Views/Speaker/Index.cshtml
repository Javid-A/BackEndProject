@model IEnumerable<Speaker>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Speaker List</h4>
                <a class="btn btn-success" asp-action="Create">Add Speaker</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Fullname
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Speaker speaker in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/event/@speaker.ImagePath" style="width:100px !important;height:90px !important" alt="image" />
                                    </td>
                                    <td>
                                        <p>@speaker.Fullname</p>
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@speaker.Id" class="btn btn-success">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@speaker.Id" class="btn btn-primary">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@speaker.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



