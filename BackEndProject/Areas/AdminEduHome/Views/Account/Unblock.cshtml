@model UserVM
@{
    ViewData["Title"] = "Unblock";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blocked User</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Username
                            </th>
                            <th>
                                Role
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="py-1">
                                <span><strong>@Model.Username</strong></span>
                            </td>
                            <td class="py-1">
                                <span><strong>@Model.Role</strong></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <form class="form-sample" id="form" method="post">
        <button type="submit" class="btn btn-behance">Unblock</button>
    </form>
</div>
<div class="row mt-3">
    <a asp-action="BlockedList" class="btn btn-dark">Go Back</a>
</div>
@section Scripts{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
		$("#form").submit(function (e) {
			e.preventDefault();
			swal({
				title: "Are you sure to unblock this user?",
				icon: "warning",
				buttons: true,
				dangerMode: true,
			})
				.then((willDelete) => {
					if (willDelete) {
						swal("User has been unblocked!", {
							icon: "success",
						}).then(function () {
							setTimeout(() => document.querySelector("#form").submit(), 100);
						})
					} else {
						swal("User are still blocked!");
					}
				});

		})
    </script>
}
