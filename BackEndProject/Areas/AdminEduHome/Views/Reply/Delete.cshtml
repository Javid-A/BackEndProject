@model Reply
@{
	ViewData["Title"] = "Delete";
}

<form id="form" method="post">
	<div>
		<h4>Name</h4>
		<p>@Model.Name</p>
	</div>
	<div style="margin-top:30px">
		<h4>Email</h4>
		<p>@Model.Email</p>
	</div>
	<div style="margin-top:30px">
		<h4>Subject</h4>
		<p>@Model.Subject</p>
	</div>
	<div style="margin-top:30px">
		<h4>Message</h4>
		<p>@Model.Message</p>
	</div>
	<button type="submit" class="mt-3 btn btn-danger">Delete</button>
</form>
<div class="row" style="margin-top:20px">
	<a asp-action="Index" class="btn btn-dark">Go Back</a>
</div>
@section Scripts{
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<script>
		$("#form").submit(function (e) {
			e.preventDefault();
			swal({
				title: "Are you sure?",
				text: "Once deleted, you will not be able to recover this reply!",
				icon: "warning",
				buttons: true,
				dangerMode: true,
			})
				.then((willDelete) => {
					if (willDelete) {
						swal("Reply has been deleted!", {
							icon: "success",
						}).then(function () {
							setTimeout(() => document.querySelector("#form").submit(), 100);
						})
					} else {
						swal("Reply was not deleted!");
					}
				});
		})
	</script>
}
