@model Testimonial
@{
	ViewData["Title"] = "Edit";
}

<form method="post" id="form" enctype="multipart/form-data">
	<h4 style="margin-top:30px" class="card-title">Photo</h4>
	<input asp-for="Photo" style="width:100%" class="form-control" />
	<span asp-validation-for="Photo" class="text text-danger"></span>

	<h4 style="margin-top:30px" class="card-title">Fullname</h4>
	<input asp-for="StudentFullname" value="@Model.StudentFullname" class="form-control" style="width:100%" />
	<span asp-validation-for="StudentFullname" id="videoError" class="text text-danger"></span>


	<h4 style="margin-top:30px" class="card-title">Degree</h4>
	<input asp-for="Degree" value="@Model.Degree" class="form-control" style="width:100%" />
	<span asp-validation-for="Degree" id="videoError" class="text text-danger"></span>

	<h4 style="margin-top:30px" class="card-title">About</h4>
	<textarea asp-for="AboutStudent" class="form-control" style="width:100%;height:70px">@Model.AboutStudent</textarea>
	<span asp-validation-for="AboutStudent" id="videoError" class="text text-danger"></span><br />

	<button type="submit" class="btn btn-primary mt-3">Edit</button>
</form>

@section Scripts{
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

